@model IEnumerable<OdeToFood.Models.RestaurantListViewModel>

@{
    ViewBag.Title = "Home Page";
}

<form method="get">
    <input type="search" name="searchTerm" value="" />
    <input type="submit" name="name" value="Search By Name" />
</form>

@foreach(var item in Model) {
    <div>
        <h4>@item.Name</h4>
        <div>@item.City, @item.Country</div>
        <div>Reviews: @item.ReviewCount</div>
        <hr />
    </div>
}
